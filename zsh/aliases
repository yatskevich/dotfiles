# list files
alias ls='ls -hFG'
alias l='ls -l'
alias la='l -a'
alias oa='open -a The\ Archive\ Browser'

# navigation
alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

# management
alias reload_aliases="source $ZSH/aliases"
alias reload_config="source $ZSH/config"
alias reload_env="source $ZSH/env"

alias ea="$EDITOR $ZSH/aliases && reload_aliases"
alias ec="$EDITOR $ZSH/config && reload_config"
alias ee="$EDITOR $ZSH/env && reload_env"

# git
alias g='clear && git status'
alias gf='git fetch'
alias gb='git branch'

# OS X
alias lscleanup="/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user && killall Finder"

# misc
alias pag='ps aux | grep'

# tools
alias cap="bundle exec cap"
alias knife="bundle exec knife"

# Docker
alias dsinit="boot2docker shellinit"
