# list files
alias ls='ls -hFG'
alias l='ls -l'
alias la='l -a'
alias oa='open -a The\ Archive\ Browser'

# navigation
alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

# management
alias reload_aliases="source $ZSH/aliases"
alias reload_config="source $ZSH/config"
alias reload_env="source $ZSH/env"

alias ea="$EDITOR $ZSH/aliases && reload_aliases"
alias ec="$EDITOR $ZSH/config && reload_config"
alias ee="$EDITOR $ZSH/env && reload_env"

# git
alias g='clear && git status'
alias gb='git branch'
alias gf='git fetch --prune'
alias gfr='git fetch --prune && git rebase'
alias gs='git stash'
alias gsp='git stash pop'
alias gsl='git stash list'
alias gp='git push -u'
alias gpp='git push -u --force-with-lease'
alias gbr="git branch | grep -v "master" | xargs git branch -D"

# OS X
alias lscleanup="/System/Library/Frameworks/CoreServices.framework/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user && killall Finder"

# misc
alias pag='ps aux | grep'

# tools
alias cap="bundle exec cap"
#alias knife="bundle exec knife"

# Docker
alias dsh='eval "$(docker-machine env default)"'
alias d='docker'
alias dm='docker-machine'
alias dim='docker images'
alias dp='docker ps'
alias dop='docker system prune -a -f'

# Gradle
alias gradle=gw

