export JAVA_HOME=`/usr/libexec/java_home`
PATH=$PATH:$JAVA_HOME/bin

export PLAY_HOME=$HOME/dev/env/play
PATH=$PATH:$PLAY_HOME

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
PATH=$PATH:/usr/local/share/npm/bin # npm binaries

export EDITOR=vim

export PATH

ulimit -n 10000 # set max number of open files. In OS X this limit is set to 256 by default, which is very low

source $HOME/.rvm/scripts/rvm
