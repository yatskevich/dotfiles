export EDITOR=vim

export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
export SBT_OPTS='-Xms2G -Xmx4G -Xss1M -XX:+CMSClassUnloadingEnabled'

# homebrew binaries
HOMEBREW=/usr/local/sbin

# npm binaries
NPM_PATH=/usr/local/share/npm/bin

# Chef DK
CHEF_DK=$HOME/.chefdk/gem/ruby/2.1.0/bin:/opt/chefdk/bin

export GOPATH=$HOME/dev/yatskevich/00-research/go

export PATH=$HOMEBREW:$NPM_PATH:$CHEF_DK:$GOPATH/bin:$PATH

# for python
export LC_ALL="en_US.UTF-8"

use-java () {
    export JAVA_HOME=`/usr/libexec/java_home -v 1.$1`
}

export WORKON_HOME=$HOME/.virtualenvs
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python
export VIRTUALENVWRAPPER_VIRTUALENV=/usr/local/bin/virtualenv
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages'
source /usr/local/bin/virtualenvwrapper.sh
