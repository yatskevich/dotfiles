#export SBT_OPTS='-Xms2G -Xmx4G -Xss1M -XX:+CMSClassUnloadingEnabled'

# homebrew binaries
HOMEBREW=/usr/local/sbin

# npm binaries
NPM_PATH=/usr/local/share/npm/bin

